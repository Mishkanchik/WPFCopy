<Window x:Class="FileCopyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Copy App" Height="350" Width="525">
    <Grid>
        <TextBox Name="txtFrom" Width="300" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <Button Name="btnFrom" Content="From" Width="75" Height="25" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Click="BtnFrom_Click"/>

        <TextBox Name="txtTo" Width="300" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <Button Name="btnTo" Content="To" Width="75" Height="25" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10,50,0,0" Click="BtnTo_Click"/>

        <TextBox Name="txtCopies" Width="300" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,100,0,0"/>

        <Button Name="btnCopy" Content="Copy" Width="75" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,150,0,0" Click="BtnCopy_Click"/>
        <Button Name="btnStop" Content="Stop" Width="75" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,150,0,0" Click="BtnStop_Click"/>
        <Label Name="lblStatus" Content="Status: Ready" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,200,0,0"/>
    </Grid>
</Window>
